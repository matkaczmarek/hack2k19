<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonWysypiska"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#EEECEC"
        android:backgroundTintMode="multiply"
        android:color="#E9E9E9"
        android:ellipsize="none"
        android:fontFamily="@font/foncik"
        android:shadowColor="#0000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:text="DZIKIE WYSYPISKA SMIECI"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPosesja"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#EEECEC"
        android:backgroundTintMode="multiply"
        android:color="#E9E9E9"
        android:ellipsize="none"
        android:fontFamily="@font/foncik"
        android:shadowColor="#0000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:text="SMIECI NA TERENIE POSESJI"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWysypiska" />

    <Button
        android:id="@+id/buttonSpalanie"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#EEECEC"
        android:backgroundTintMode="multiply"
        android:color="#E9E9E9"
        android:ellipsize="none"
        android:fontFamily="@font/foncik"
        android:shadowColor="#0000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:text="SPALANIE ODPADOW"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPosesja" />

    <Button
        android:id="@+id/buttonPojemniki"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#EEECEC"
        android:backgroundTintMode="multiply"
        android:color="#E9E9E9"
        android:ellipsize="none"
        android:fontFamily="@font/foncik"
        android:shadowColor="#0000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:text="BRAK POJEMNIKOW DO SEGREGACJI"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSpalanie" />

    <Button
        android:id="@+id/buttonNiebepieczne"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#EEECEC"
        android:backgroundTintMode="multiply"
        android:color="#E9E9E9"
        android:ellipsize="none"
        android:fontFamily="@font/foncik"
        android:shadowColor="#0000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:text="POSTEPOWANIE Z ODPADAMI NIEBEZPIECZNYMI"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPojemniki" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#EEECEC"
        android:backgroundTintMode="multiply"
        android:color="#E9E9E9"
        android:ellipsize="none"
        android:fontFamily="@font/foncik"
        android:shadowColor="#0000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:text="POSTEPOWANIE ZE ZUZYTYM SPRZETEM ELEKTRYCZNYM"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNiebepieczne" />

</android.support.constraint.ConstraintLayout>